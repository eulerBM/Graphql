type Query {
    productById(id: Int!): Product
}

type Mutation {
    createProduct(name: String, description: String, price: Float): Product
    deleteProduct(id: Int!): Boolean
    changeProduct(id: Int!, name: String, description: String, price: Float): Product
}

type Product {
    id: ID
    name: String
    description: String
    price: Float
}

